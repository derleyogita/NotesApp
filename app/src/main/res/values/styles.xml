<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Progress dialog style-->
    <style name="ProgressDialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="roundedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/btn_red_background</item>
        <item name="android:letterSpacing">0.01</item>
    </style>`

    <style name="rectangleButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/bg_red_rounded_border</item>
        <item name="android:letterSpacing">0.01</item>
    </style>


    <style name="tvBlackTextMediumExtraSemiBold">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tvWhiteTextMediumExtraSemiBold">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ap_semibold</item>
    </style>

    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!--    Date picker dialog style end-->
    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/color_red</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>
</resources>